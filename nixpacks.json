{
  "providers": ["php", "node"],
  "phases": {
    "setup": {
      "nixPkgs": [
        "php83",
        "php83Extensions.gd",
        "php83Extensions.pdo_mysql",
        "php83Extensions.bcmath",
        "php83Extensions.zip",
        "php83Extensions.fileinfo",
        "php83Extensions.xml",
        "nodejs",
        "npm"
      ]
    },
    "build": {
      "cmds": [
        "npm install",
        "npm run build",
        "composer install --optimize-autoloader --no-dev --no-interaction"
      ]
    }
  }
}