APP_NAME=HackZone
APP_ENV=local
APP_KEY=
APP_DEBUG=true
# Para desarrollo local: http://localhost
# Para producción: https://hackzone.online
APP_URL=https://hackzone.online

APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_ES

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=hackzone
DB_USERNAME=root
DB_PASSWORD=

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting & Cache
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
CACHE_STORE=file

# Queue Configuration (IMPORTANTE: Necesario para notificaciones)
QUEUE_CONNECTION=database

# Redis (Opcional - Mejor performance en producción)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration (IMPORTANTE: Configurar para envío de correos)
# Habilitar envío de correos (true para enviar, false para solo registrar en logs)
MAIL_ENABLED=true

# MAILER: brevo (API - recomendado para producción), smtp (SMTP - puede estar bloqueado en cloud)
MAIL_MAILER=brevo
MAIL_FROM_ADDRESS=noreply@hackzone.com
MAIL_FROM_NAME="${APP_NAME}"

# Brevo API Key (recomendado para Railway/producción)
BREVO_API_KEY=your-brevo-api-key

# Para desarrollo local con Mailtrap (SMTP): https://mailtrap.io
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.mailtrap.io
# MAIL_PORT=2525
# MAIL_USERNAME=your_mailtrap_username
# MAIL_PASSWORD=your_mailtrap_password
# MAIL_ENCRYPTION=tls

# Para producción con Gmail:
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=tu-email@gmail.com
# MAIL_PASSWORD=tu-app-password
# MAIL_ENCRYPTION=tls
# MAIL_FROM_ADDRESS=noreply@hackzone.com
# MAIL_FROM_NAME="${APP_NAME}"

# Para producción con Brevo (Sendinblue):
# MAIL_MAILER=smtp
# MAIL_HOST=smtp-relay.brevo.com
# MAIL_PORT=587
# MAIL_USERNAME=tu-email@brevo.com
# MAIL_PASSWORD=tu-smtp-key-de-brevo
# MAIL_ENCRYPTION=tls
# MAIL_FROM_ADDRESS=noreply@hackzone.com
# MAIL_FROM_NAME="${APP_NAME}"

# AWS (Opcional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
